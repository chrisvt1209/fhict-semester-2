@model PlatformListVM;

@{
    ViewBag.Title = "Index";
}

<div class="text-lg-center">
    <h2>Platforms</h2>
    <a class="btn btn-primary" asp-action="create">Add platform</a>
</div>

<div class="py-3">
    <ul class="list-group">
        @foreach (PlatformVM platform in Model.PlatformList!)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @platform.Name
                <a asp-action="Edit" asp-route-id="@platform.Id" class="btn btn-secondary"><i class="bi bi-pen"></i></a>
            </li>
        }
    </ul>
</div>
