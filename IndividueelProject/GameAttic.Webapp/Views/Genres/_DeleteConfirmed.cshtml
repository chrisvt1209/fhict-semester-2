@model GenreVM;

<div>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deletePlatformModal"><i class="bi bi-trash3"></i></button>
</div>

<div class="modal fade" id="deletePlatformModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this genre?</p>
            </div>
            <div class="modal-footer">
                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Yes" class="btn btn-danger" /> |
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No</button>
                </form>
            </div>
        </div>
    </div>
</div>